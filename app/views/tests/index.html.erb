<h1>All tests:</h1>
<table>
  <tr>
    <th>Title</th>
    <th>Level</th>
    <th>Questions</th>
  </tr>

  <% @tests.each do |test| %>
    <tr>
      <td><%= link_to test.title, test_path(test.id)%></td>
      <td><%= test_level(test.level) %></td>
      <td><%= test.questions.size %></td>
    </tr>
  <% end %>
</table>